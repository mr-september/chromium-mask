{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "author": "mr-september",
  "homepage_url": "https://github.com/mr-september/chrome-mask-for-opera",
  "version": "1.2.1",
  "default_locale": "en",
  "permissions": [
    "storage",
    "tabs",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "alarms",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "64": "assets/icon-64.png",
    "96": "assets/icon-96.png",
    "128": "assets/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/badge-indicator-off-16.png",
      "32": "assets/badge-indicator-off-32.png",
      "48": "assets/badge-indicator-off-48.png",
      "128": "assets/badge-indicator-off-128.png"
    },
    "default_title": "__MSG_maskStatusOff__",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "options_ui": {
    "page": "options.html"
  }
}
